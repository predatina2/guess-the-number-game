<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd"
            default-init-method="reset">

    <bean id="numberGenerator" class="example.hadlak.NumberGeneratorImpl"></bean>

    <bean id="game" class="example.hadlak.GameImpl" init-method="reset">
        <property name="numberGenerator" ref="numberGenerator"/>
    </bean>

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>
</beans>